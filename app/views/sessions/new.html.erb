<% provide(:title, "Sign in") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1>Sign in</h1>
    <%= simple_form_for(:session, url: sessions_path) do |f| %>

      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.button :submit, "Sign in", class: "btn-lg btn-primary" %>
    <% end %>
  
    <p align="center">New user? <%= link_to "Sign up now!", register_path %></p>
  </div>
</div>