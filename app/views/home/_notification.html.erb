<% notification_item_id = "notification_item_#{notification.id}" %>
<li id="<%= notification_item_id %>">
  <%= image_tag notification.sendable.avatar.url(:post), class: "pull-left" %>
  <%= link_to notification.sendable.alias + " " + notification.action +
              " your post: " + '"' + notification.targetable.content + '"',
              polymorphic_path([notification.receiver, notification.targetable]) %>
</li>