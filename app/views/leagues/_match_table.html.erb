<!-- Current Match Table -->
<div class="panel panel-default">
  <div class="panel-heading">
    Season <%= league.current_season_number %>: Round <%= league.current_round %> of <%= league.total_rounds %>
  </div>
  
  <!-- Table -->
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Player 1</th>
        <th>Score</th>
        <th>Player 2</th>
      </tr>
      <% league.matches_for_current_season.each do |match| %>
        <% if match.round_number == league.current_round %>
          <tr>
            <td>
              <div class="p1-match-thumb">
                <%= image_tag User.find(match.p1_id).avatar.url(:thumb) %>
              </div>
              <div class="p1-match-user">
                <%= link_to User.find(match.p1_id).alias, user_path(match.p1_id) %>
              </div>
            </td>
            <td><%= link_to match.p1_score.to_s + ":" + match.p2_score.to_s, match %></td>
            <td>
              <div class="p2-match-thumb">
                <%= image_tag User.find(match.p2_id).avatar.url(:thumb) %>
              </div>
              <div class="p2-match-user">
                <%= link_to User.find(match.p2_id).alias, user_path(match.p2_id) %>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>