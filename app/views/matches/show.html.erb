<% p1 = User.find(@match.p1_id) %>
<% p2 = User.find(@match.p2_id) %>

<div class="container">

  <!-- Player Portraits -->
  <div class="row">

    <!-- Player 1 Portrait -->
    <div class="col-md-4 col-xs-4">
      <h1><%= image_tag User.find(@match.p1_id).avatar.url(:large) %></h1>
    </div>

    <!-- VS -->
    <div class="col-md-4 col-xs-4">
      <%= image_tag "vs.png", size: "280" %>
    </div>

    <!-- Player 2 Portrait -->
    <div class="col-md-4 col-xs-4">
      <h1><%= image_tag User.find(@match.p2_id).avatar.url(:large) %></h1>
    </div>
    
  </div>

  <!-- Player & Match Info -->
  <div class="row">

    <!-- Player 1 -->
    <div class="col-md-4 col-xs-4">
      <p><%= link_to p1.alias, p1 %></p>
      <p>W-L: <%= WL_record(p1.p1_matches.where("league_id = ?", 1) + 
                            p1.p2_matches.where("league_id = ?", 1)) %></p>
      <p>League Rank: </p>
      <% if @match.p1_character != nil %>
        <p>Character: <%= Character.find(@match.p1_character).name %></p>
      <% end %>
    </div>

    <!-- Match Info -->
    <div class="col-md-4 col-xs-4">
      <p><%= @league.name %> - Round <%= @match.round_number %></p>
      <% if @match.match_date == nil %>
        <p>Match Time: TBD</p>
      <% else %>
        <p><%= @match.match_date %></p>
      <% end %>
      
      <%= @match.p1_score %> : <%= @match.p2_score %></p>
    </div>

    <!-- Player 2 -->
    <div class="col-md-4 col-xs-4">
      <p><%= link_to p2.alias, p2 %></p>
      <p>W-L: <%= WL_record(p2.p1_matches.where("league_id = ?", 1) + 
                      p2.p2_matches.where("league_id = ?", 1)) %></p>
      <p>League Rank: </p>
      <% if @match.p2_character != nil %>
        <p>Character: <%= Character.find(@match.p2_character).name %></p>
      <% end %>
    </div>
    
  </div>

  <hr>
  
  <!-- Bet Buttons & Match Score -->
  <div class="row">
    
    <!-- Player 1 Bet -->
    <div class="col-md-4 col-xs-4">
      <% if @match.scores_not_set? %>
        <% if current_user.fight_bucks > 0 %>
          <% if !current_user.fighting_in?(@match) %>
            <% unless current_user.betting_on?(@match) %>
              <%= render 'p1_bet' %>
            <% end %>
          <% else %>
            <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", disabled: true %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- Bet Info -->
    <div class="col-md-4 col-xs-4">
      <p><%= match_bet_info(@match) %></p>
    </div>

    <!-- Player 2 Bet -->
    <div class="col-md-4 col-xs-4">
      <% if @match.scores_not_set? %>
        <% if current_user.fight_bucks > 0 %>
          <% if !current_user.fighting_in?(@match) %>
            <% unless current_user.betting_on?(@match) %>
              <%= render 'p2_bet' %>
            <% end %>
          <% else %>
            <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", disabled: true %>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>