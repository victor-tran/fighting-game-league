<% if signed_in? %>
  <% like_post_form_id = "like_post_form_#{post.id}" %>
  <span id="<%= like_post_form_id %>">
    <% if current_user.liked_post?(post) %>
      <%= render partial: 'home/unlike', locals: { post: post } %>
    <% else %>
      <%= render partial: 'home/like', locals: { post: post } %>
    <% end %>
  </span>
<% end %>