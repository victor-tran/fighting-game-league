<%= form_for(match, html: { method: :patch }, :url => set_score_match_path(match.id)) do |f| %>
  <%= f.hidden_field :p1_score, :value => 0 %>
  <%= f.hidden_field :p2_score, :value => 0 %>
  <%= f.hidden_field :p1_accepted, :value => false %>
  <%= f.hidden_field :p2_accepted, :value => false %>
  <%= f.submit "Decline score", class: "btn btn-danger", :confirm => "Are you sure?" %>
<% end %>