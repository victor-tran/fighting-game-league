<% provide(:title, "Set Match Date and Time") %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">    
    <%= form_for @match, html: { method: :patch },
                                url: set_date_match_path(@match) do |f| %>

      <h1>Set Match Date and Time</h1>
      <div>
        <%= f.label "Date" %>
        <%= f.date_select :match_date %>
      </div>
      <div>
        <%= f.label "Time" %>
        <%= f.time_select :match_date, ignore_date: true, ampm: true %>
        <%= @match.league.time_zone %>
      </div>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>