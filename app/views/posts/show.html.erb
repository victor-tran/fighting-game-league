<%= render partial: "home/#{@post.postable_type.underscore}/#{@post.postable_type.underscore}_post",
           locals: { post: @post, post_show_page: true } %>

<div class="comment-section">
  <!-- Comment form -->
  <% if signed_in? %>
    <%= render 'shared/comment_form' %>
  <% end %>

  <!-- Comment list -->
  <% @post.comments.each do |comment| %>
    <% unless comment.user == nil %>
      <%= image_tag comment.user.avatar.url(:thumb) %>
      <%= link_to comment.user.alias, comment.user %>
      <small class="timestamp">
        <%= time_ago_in_words(comment.created_at) %> ago.
      </small>
      <%= comment.content %>
    <% end %>
  <% end %>
</div>