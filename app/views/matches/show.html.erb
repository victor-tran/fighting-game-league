<!-- Player Portraits -->
<div class="row player-info">

  <!-- Player 1 Portrait -->
  <div class="col-md-4 col-xs-4">
    <div class="player-vs-portrait">
      <%= image_tag @match.p1.avatar.url(:large) %>
    </div>
  </div>

  <!-- VS -->
  <div class="col-md-4 col-xs-4">
    <div class="vs-img">
      <%= image_tag "vs.png", size: "280" %>
    </div>
  </div>

  <!-- Player 2 Portrait -->
  <div class="col-md-4 col-xs-4">
    <div class="player-vs-portrait">
      <%= image_tag @match.p2.avatar.url(:large) %>
    </div>
  </div>
  
</div>

<!-- Player & Match Info -->
<div class="row">

  <!-- Player 1 -->
  <div class="col-md-4 col-xs-4 player-info">
    <p><%= link_to @match.p1.alias, @match.p1 %></p>
    <% wl_record = WL_record(@match.p1, @match.league.current_season.matches.where(
                                                "p1_id = ? OR p2_id = ?",
                                                @match.p1.id,
                                                @match.p1.id)) %>
    <p>W-L: <%= "#{wl_record[:wins]}-#{wl_record[:losses]}" %></p>
    <p>League Rank: </p>
    <p>
      Character: 
      <% @match.p1_characters.each do |character| %>
        <%= Character.find(character).name %>
      <% end %>
    </p>
  </div>

  <!-- Match Info -->
  <div class="col-md-4 col-xs-4 match-info">
    <p><%= link_to "#{@league.name} - Round #{@match.round_number}", @league %></p>
    <% if @match.match_date == nil %>
      <p>Match Time: TBD</p>
    <% else %>
      <p><%= @match.match_date %></p>
    <% end %>
    
    <div class="match-score"><%= @match.p1_score %> : <%= @match.p2_score %></div>
  </div>

  <!-- Player 2 -->
  <div class="col-md-4 col-xs-4 player-info">
    <p><%= link_to @match.p2.alias, @match.p2 %></p>
    <% wl_record = WL_record(@match.p2, @match.league.current_season.matches.where(
                                                "p1_id = ? OR p2_id = ?",
                                                @match.p2.id,
                                                @match.p2.id)) %>
    <p>W-L: <%= "#{wl_record[:wins]}-#{wl_record[:losses]}" %></p>
    <p>League Rank: </p>
    <p>
      Character: 
      <% @match.p2_characters.each do |character| %>
        <%= Character.find(character).name %>
      <% end %>
    </p>
  </div>
  
</div>

<hr>

<!-- Bet Buttons & Match Score -->
<div class="row">
  
  <!-- Player 1 Bet -->
  <div class="col-md-4 col-xs-4 match-info">
    <% if @match.match_date == nil %>
      <% if current_user.fight_bucks > 0 %>
        <% if !current_user.fighting_in?(@match) %>
          <% unless current_user.betting_on?(@match) %>
            <%= render 'p2_bet' %>
          <% end %>
        <% else %>
          <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", 
                                   disabled: true %>
        <% end %>
      <% end %>
    <% else %>
      <% if @match.match_date.to_date > Date.today || 
            @match.match_date > Time.now %>
        <% if current_user.fight_bucks > 0 %>
          <% if !current_user.fighting_in?(@match) %>
            <% unless current_user.betting_on?(@match) %>
              <%= render 'p1_bet' %>
            <% end %>
          <% else %>
            <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", 
                                     disabled: true %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", 
                                 disabled: true %>
      <% end %>
    <% end %>
  </div>

  <!-- Bet Info -->
  <div class="col-md-4 col-xs-4 match-info">
    <p><%= match_bet_info(@match) %></p>
  </div>

  <!-- Player 2 Bet -->
