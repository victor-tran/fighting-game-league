<% provide(:title, @title) %>
<div class="row">  
  
  <aside class="col-md-4">
    <section>
      <%= image_tag @user.avatar.url(:medium) %>
      <h1><%= @user.alias %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% if user.class == 'User' %>
              <%= link_to image_tag(user.avatar.url(:post)), user %>
            <% elsif user.class == 'League' %>
              <%= link_to image_tag(user.banner.url(:post)), user %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>