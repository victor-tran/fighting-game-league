<% standings = @league.generate_user_standings(@league.matches_for_current_season) %>

<div class="tab-pane active">
  <h1><%= @league.name %> Statistics</h1>
  <h2>Total Matches Played: <%= @league.total_matches_played %></h2>
  <h3>All Seasons & Tournament Matches</h3>

  <!-- Table -->
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <tr>
        <th>Fighter</th>
        <th>MP</th>
        <th>W</th>
        <th>L</th>
      </tr>
      <% for i in 0..standings.count - 1 %>
        <tr>
          <td>
            <%= link_to User.find(standings[i][0]).alias, user_path(User.find(standings[i][0])) %>
          </td>
          <td>
            <%= standings[i][1][2] %>
          </td>
          <td>
            <%= standings[i][1][0] %>
          </td>
          <td>
            <%= standings[i][1][1] %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>