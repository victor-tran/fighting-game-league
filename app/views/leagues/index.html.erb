<% provide(:title, 'All leagues') %>
<h1>All leagues</h1>

<%= form_tag leagues_path, method: :get, id: 'league_search' do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<%= will_paginate %>

<ul class="leagues">
  <% if @leagues.any? %>
    <%= render @leagues %>
  <% end %>
</ul>

<%= will_paginate %>