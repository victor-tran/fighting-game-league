<% if @league.seasons.empty? %>
  <% next_season_number = 1.to_s %>
<% else %>
  <% next_season_number = (@league.seasons.last.number + 1).to_s %>
<% end %>
<%= simple_form_for @league, html: { method: :patch },
                             url: start_league_path do |f| %>
  <%= f.hidden_field :started, value: true %>
  <%= f.hidden_field :current_round, value: 1 %>
  <%= f.submit "Start Season " + next_season_number,
                class: "btn btn-large btn-primary", 
                data: { confirm: "Are you sure? You cannot stop the season once you've started." } %>
<% end %>
