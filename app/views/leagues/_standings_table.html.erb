<% standings = @league.generate_user_standings %>
<!-- Panel -->
<div class="panel panel-default">
  <div class="panel-heading">
    Season <%= @league.current_season_number %> Standings
  </div>
  
  <!-- Table -->
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <tr>
        <th>Fighter</th>
        <th>MP</th>
        <th>W</th>
        <th>L</th>
        <th>Streak</th>
      </tr>
      <% for i in 0..standings.count - 1 %>
        <tr>
          <td>
            <%= link_to User.find(standings[i][0]).alias, user_path(User.find(standings[i][0])) %>
          </td>
          <td>
            <%= standings[i][1][2] %>
          </td>
          <td>
            <%= standings[i][1][0] %>
          </td>
          <td>
            <%= standings[i][1][1] %>
          </td>
          <td>
            <%= User.find(standings[i][0]).current_streak %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>