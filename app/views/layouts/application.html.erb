<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Fighting Game League" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    <script src="http://js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.4.3.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="http://cdn.oesmith.co.uk/morris-0.4.3.min.js"></script>
    <% if signed_in? %>
      <script type="text/javascript" charset="utf-8">
        $(function() {

          var pusher = new Pusher('4f019a37610d0978c340');
          var channel = pusher.subscribe('private-user-<%== escape_javascript(@current_user.id.to_s) %>');

          // Some useful debug msgs
          pusher.connection.bind('connecting', function() {
            $('div#status').text('Connecting to Pusher...');
          });
          pusher.connection.bind('connected', function() {
            $('div#status').text('Connected to Pusher!');
          });
          pusher.connection.bind('failed', function() {
            $('div#status').text('Connection to Pusher failed :(');
          });
          channel.bind('subscription_error', function(status) {
            $('div#status').text('Pusher subscription_error');
          });
          channel.bind('my_event', function(data) {
            alert(data.message);
          });
          channel.bind('new_like_notification', function(data) {
            if (data.no_avatar == true) {
              // Add notification to notification list.
              $("#notifications ul").prepend(
                "<li id='notification_item_"+data.notification_id+"'><img alt='Missing' class='pull-left' src='/assets/user/avatar/post/missing.png'><a href='/"+data.op_type+"/"+data.op_id+"/"+data.targetable_type+"/"+data.targetable_id+"'>"+data.sender_name+" liked your post: "+'"'+data.post_content+'"'+"</a></li>");
            } else {
              // Add notification to notification list.
              $("#notifications ul").prepend(
                "<li id='notification_item_"+data.notification_id+"'><img alt="+data.img_alt+" class='pull-left' src="+data.img_src+"><a href='/"+data.op_type+"/"+data.op_id+"/"+data.targetable_type+"/"+data.targetable_id+"'>"+data.sender_name+" liked your post: "+'"'+data.post_content+'"'+"</a></li>");
            }

            // Update unread notifications count.
            $(".notification_badge").html(data.unread_count);
          });
          channel.bind('delete_notification', function(data) {
            // Remove notification from notification list.
            $("#notification_item_"+data.notification_id).remove();

            // Update unread notifications count.
            if (data.unread_count > 0) {
              $(".notification_badge").html(data.unread_count);
            } else {
              $(".notification_badge").html('');
            }
          });
          channel.bind('new_comment_notification', function(data) {
            if (data.no_avatar == true) {
              // Add notification to notification list.
              $("#notifications ul").prepend(
                "<li id='notification_item_"+data.notification_id+"'><img alt='Missing' class='pull-left' src='/assets/user/avatar/post/missing.png'><a href='/"+data.op_type+"/"+data.op_id+"/"+data.targetable_type+"/"+data.targetable_id+"'>"+data.sender_name+" commented on your post: "+'"'+data.post_content+'"'+"</a></li>");
            } else {
              // Add notification to notification list.
              $("#notifications ul").prepend(
                "<li id='notification_item_"+data.notification_id+"'><img alt="+data.img_alt+" class='pull-left' src="+data.img_src+"><a href='/"+data.op_type+"/"+data.op_id+"/"+data.targetable_type+"/"+data.targetable_id+"'>"+data.sender_name+" commented on your post: "+'"'+data.post_content+'"'+"</a></li>");
            }

            // Update unread notifications count.
            $(".notification_badge").html(data.unread_count);
          });
          channel.bind('new_follower_notification', function(data) {
            if (data.no_avatar == true) {
              // Add notification to notification list.
              $("#notifications ul").prepend(
                "<li id='notification_item_"+data.notification_id+"'><img alt='Missing' class='pull-left' src='/assets/user/avatar/post/missing.png'><a href='/users/"+data.follower_id+"'>"+data.notification_content+"</a></li>");
            } else {
              // Add notification to notification list.
              $("#notifications ul").prepend(
                "<li id='notification_item_"+data.notification_id+"'><img alt="+data.img_alt+" class='pull-left' src="+data.img_src+"><a href='/users/"+data.follower_id+"'>"+data.notification_content+"</a></li>");
            }

            // Update unread notifications count.
            $(".notification_badge").html(data.unread_count);
          });
        });
    </script>
    <% end %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <div class="container">
       <%= render 'layouts/messages' %>
       <%= yield %>
      <%= render 'layouts/footer' %>
     </div>
    </main>
  </body>
</html>
