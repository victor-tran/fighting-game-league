        <% if current_user.fight_bucks > 0 %>
          <% if !current_user.fighting_in?(@match) %>
            <% unless current_user.betting_on?(@match) %>
              <%= render 'p2_bet' %>
            <% end %>
          <% else %>
            <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", 
                                     disabled: true %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to "Bet!", '#', class: "btn btn-lg btn-primary", 
                                 disabled: true %>
      <% end %>
    <% end %>
  </div>

</div>
