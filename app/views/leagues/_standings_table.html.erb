<% standings = @league.generate_user_standings(@league.matches_for_current_season) %>

<div class="tab-pane active">
  <!-- Panel -->
  <div class="panel panel-default">
    <div class="panel-heading">
      Season <%= @league.current_season_number %> Standings
    </div>
    
    <!-- Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <tr>
          <th>Fighter</th>
          <th>MP</th>
          <th>W</th>
          <th>L</th>
          <th>Streak</th>
        </tr>
        <% for i in 0..standings.count - 1 %>
          <tr>
            <% user = User.find(standings[i][0]) %>
            <!-- Fighter -->
            <td>
              <%= link_to user.alias, user %>
            </td>
            <!-- MP -->
            <td>
              <%= standings[i][1][2] %>
            </td>
            <!-- Wins -->
            <td>
              <%= standings[i][1][0] %>
            </td>
            <!-- Losses -->
            <td>
              <%= standings[i][1][1] %>
            </td>
            <!-- Current Streak for this Season -->
            <td>
              <%= user.current_streak(@league.matches.where(
                    "season_number = ? AND (p1_id = ? OR p2_id = ?)",
                     @league.current_season_number, user.id, user.id)) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div> 