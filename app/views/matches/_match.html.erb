<div class="matches-users-and-score">
  <%= image_tag match.p1.avatar.url(:thumb), class: "match-p1-img" %>
  <%= link_to match.p1_score.to_s + " : " + match.p2_score.to_s, match %>
  <%= image_tag match.p2.avatar.url(:thumb), class: "match-p2-img" %>
</div>
<div class="matches-usernames">
  <%= link_to match.p1.alias, match.p1, class: "match-p1-alias" %>
  <%= link_to match.p2.alias, match.p2, class: "match-p2-alias" %>
</div>